@using ArraylistExamplePhoneDirectory.Helpers
@using System.Collections
@model ArraylistExamplePhoneDirectory.Models.ContactModel

@{
    ViewData["Title"] = "Update Page";
}
<form asp asp-controller="Home" asp-action="Edit" method="post">
    <div  hidden="true" class="form-group">
        <input asp-for="Id" type="text" value="@Model.Id" class="form-control" id="Id">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">İsim</label>
        <input asp-for="Name" type="text" value="@Model.Name"  class="form-control" id="Name" placeholder="İsim">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Soyisim</label>
        <input asp-for="Surname" type="text" value="@Model.Surname" class="form-control" id="Surname" placeholder="Soyisim">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Telefon</label>
        <input asp-for="Phone" type="text" value="@Model.Phone" class="form-control" id="Phone" placeholder="Telefon">
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>